<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20sp">

    <ImageView android:id="@+id/ivIconDialog"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher"/>

    <TextView android:id="@+id/tvNameDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="App name"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_marginTop="15dp"/>

    <TextView android:id="@+id/tvPackageDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="com.company.package"
        android:textSize="20sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="2dp"/>

    <TextView android:id="@+id/tvVersionDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Version 2.0.1"
        android:textSize="20sp"
        android:layout_marginTop="2dp"/>

    <TextView android:id="@+id/tvCodeVersionDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.0.1"
        android:textSize="20sp"
        android:layout_marginTop="2dp"/>
</LinearLayout>